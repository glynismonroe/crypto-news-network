<div class="container">
  <div class="row">

    <% for x in @news["Data"] %>
        <div class="col-sm">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="<%= x["imageurl"] %>" alt="x["source"] ">
                <div class="card-body">
                 <h5 class="card-title"><%= x["title"] %></h5>
                 <p class="card-text"><%= x["body"] %><br/><br/></p>
                 <a href="<%= x["url"] %>" class="btn btn-secondary">Read More...</a>
                </div>
             </div>
          <br/>
        </div>
    <% end %>
  </div>    
</div>