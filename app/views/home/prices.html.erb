
<% @symbol %>

 <% if @symbol %>
   <% if @quote["Respone"] %>
      <h4>That Crypto Symbol Doesn't Exist. Please Try Again.</h4>
   <% else %>
        
        <% @quote["DISPLAY"].each do |key, value| %>
           <div class="jumbotron">
           <h1 class="display-4"><% key %></h1>
           Price: <%= value["USD"]["PRICE"] %><br/>
           24hr High: <%= value["USD"]["HIGHDAY"] %><br/>
           24hr Low: <%= value["USD"]["LOWDAY"] %><br/>
           Market Cap: <%= value["USD"]["MKTCAP"] %><br/>
           </div>
        <% end %>
  
    <% end %>

<% else %>
   <h4>Oops!Please enter a crypto symbol in the form above dummy...</h4>
<% end %>
     
